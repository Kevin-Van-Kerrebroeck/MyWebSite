@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            <span class="label"> hello @User.Identity.GetUserName().Remove(User.Identity.GetUserName().IndexOf("@"), (User.Identity.GetUserName().Count() - User.Identity.GetUserName().IndexOf("@"))).ToString()</span>
        </li>
        <li><span class="label"><a href="javascript:document.getElementById('logoutForm').submit()" class="actionlink-no-link actionlink-red">Log off</a></span></li>
    </ul>
    }
}
