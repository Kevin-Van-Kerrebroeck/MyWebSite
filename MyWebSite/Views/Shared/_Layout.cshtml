<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title KevinVanKerrebroeck.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @*Google Analytics Code Snippet*@
    <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-90344913-1', 'auto');
  ga('send', 'pageview');

    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header my-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>    
                <a href="@Url.Action("","home")">
                    <img src="~/Content/myPhoto.jpg" class="img-rounded img-responsive img-my-header hidden-xs" />
                </a>           
                @Html.ActionLink("Kevin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand hidden-sm hidden-md hidden-lg" })
            </div>
            <div class="navbar-collapse collapse my-navbar-paddingleft my-header">
                <ul class="nav navbar-nav">
                    <li class="my-header-links">@Html.ActionLink("Cv", "Cv", "Home")</li>
                    <li class="my-header-links">@Html.ActionLink("About Me", "About", "Home")</li>
                    @*<li class="my-header-links">@Html.ActionLink("My Projects", "Projects", "Home")</li>*@
                    <li class="my-header-links">@Html.ActionLink("Contact Me", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="space-under-header">

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - @DateTime.Now.Year - Kevin Van Kerrebroeck | Beta 1.0.0 </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
