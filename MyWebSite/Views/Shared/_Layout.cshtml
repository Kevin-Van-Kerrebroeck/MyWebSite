<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header my-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>    
                <a href="@Url.Action("","home")">
                    <img src="~/Content/myPhoto.jpg" class="img-rounded img-responsive img-my-header hidden-xs" />
                </a>           
                @Html.ActionLink("Kevin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand hidden-sm hidden-md hidden-lg" })
            </div>
            <div class="navbar-collapse collapse my-navbar-paddingleft my-header">
                <ul class="nav navbar-nav">
                    <li class="my-header-links">@Html.ActionLink("Cv", "Cv", "Home")</li>
                    <li class="my-header-links">@Html.ActionLink("About Me", "About", "Home")</li>
                    @*<li class="my-header-links">@Html.ActionLink("My Projects", "Projects", "Home")</li>*@
                    <li class="my-header-links">@Html.ActionLink("Contact Me", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="space-under-header">

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - @DateTime.Now.Year - Kevin Van Kerrebroeck | Beta 1.0.0 </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
