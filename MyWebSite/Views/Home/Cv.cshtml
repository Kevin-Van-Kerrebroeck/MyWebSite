@model MyWebSite.Models.CvModelView


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active">
                    <a data-toggle="tab" href="#opleidingen" class="actionlink-no-link">
                        <span class="glyphicon glyphicon-book hidden-md hidden-lg hidden-sm gi-1-5x"></span>
                        <span class="hidden-xs">Opleidingen</span>
                    </a>
                </li>
                <li role="presentation">
                    <a data-toggle="tab" href="#jobs" class="actionlink-no-link">
                        <span class="glyphicon glyphicon-wrench hidden-md hidden-lg hidden-sm gi-1-5x"></span>
                        <span class="hidden-xs">Jobs</span>
                    </a>
                </li>
                <li role="presentation">
                    <a data-toggle="tab" href="#vaardigheden" class="actionlink-no-link">
                        <span class="glyphicon glyphicon-hdd hidden-md hidden-lg hidden-sm gi-1-5x"></span>
                        <span class="hidden-xs">Vaardigheden</span>
                    </a>
                </li>
            </ul>

        </div>

    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="tab-content">
                <div id="opleidingen" class="tab-pane fade in active">
                    @*---------OPLEIDINGEN--------------------*@
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-4">

                                </div>
                                <div class="col-sm-5">
                                    <h2 class="my-header-cv">Opleidingen </h2>
                                </div>
                                <div class="col-sm-3">
                                    @*Html.ActionLink(" ", "Create", "Educations", null, new { @class = "glyphicon glyphicon-plus gi-2x actionlink-no-link" })*@
                                </div>
                            </div>
                            @foreach (var e in Model.Educations)
                            {
                                <div class="row">
                                    <div class="col-sm-2">
                                        @e.StartDate.Year <text> - </text> @e.EndDate.Year
                                    </div>
                                    <div class="col-sm-1">
                                        @*EMPTY SPACE*@
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @e.SchoolName
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @e.TrajectName
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @e.ObtainedDegree
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-1">
                                        @*<div class="row">
                                                <div class="col-sm-2">

                                                    @using (Html.BeginForm("Delete", "Admin", new { id = e.ID }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn-no-button">
                                                            <span class="glyphicon glyphicon-remove gi-2x"></span>
                                                        </button>
                                                    }
                                                </div>
                                                <div class="col-sm-2">
                                                    @Html.ActionLink(" ", "Edit", "Educations", new { id = e.ID }, new { @class = "glyphicon glyphicon-edit gi-2x actionlink-no-link" })
                                                </div>
                                            </div>*@
                                    </div>
                                </div>
                                <br />
                            }
                        </div>
                    </div>


                </div>
                <div id="jobs" class="tab-pane fade">
                    @*------JOBS-------------*@
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-4">

                                </div>
                                <div class="col-sm-5">
                                    <h2 class="my-header-cv">Jobs</h2>
                                </div>
                                <div class="col-sm-3">
                                    @*@Html.ActionLink(" ", "Create", "Jobs", null, new { @class = "glyphicon glyphicon-plus gi-2x actionlink-no-link" })*@
                                </div>
                            </div>
                            @foreach (var j in Model.Jobs)
            {
                                <div class="row">
                                    <div class="col-sm-2">
                                        @j.StartDate.Year <text> - </text> @j.EndDate.Year
                                    </div>
                                    <div class="col-sm-1">
                                        @*EMPTY SPACE*@
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @j.CompanyName
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @j.ContractType
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @j.JobFunction
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                @j.JobDescription
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        @*<div class="row">
                                                <div class="col-sm-2">

                                                    @using (Html.BeginForm("Delete", "Jobs", new { id = j.ID }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn-no-button">
                                                            <span class="glyphicon glyphicon-remove gi-2x"></span>
                                                        </button>
                                                    }
                                                </div>
                                                <div class="col-sm-2">
                                                    @Html.ActionLink(" ", "Edit", "Jobs", new { id = j.ID }, new { @class = "glyphicon glyphicon-edit gi-2x actionlink-no-link" })
                                                </div>
                                            </div>*@
                                    </div>
                                </div>
                                <br />
                            }
                        </div>
                    </div>
                </div>
                <div id="vaardigheden" class="tab-pane fade">
                    @*---VAARDIGHEDEN---------------*@
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-4">

                                </div>
                                <div class="col-sm-5">
                                    <h2 class="my-header-cv">Vaardigheden</h2>
                                </div>
                                <div class="col-sm-3">
                                    @*@Html.ActionLink(" ", "Create", "Skills", null, new { @class = "glyphicon glyphicon-plus gi-2x actionlink-no-link" })*@
                                </div>
                            </div>
                            @foreach (var c in Model.Categories)
            {
                                <h4 class="my-sub-header-cv">@c.CategoryName</h4>
                                foreach (var s in Model.Skills)
                                {
                                    if (s.SkillCategory.Id.Equals(c.Id))
                                    {
                                        <div class="row" style="padding:6px;">
                                            <div class="col-xs-5">
                                                @s.SkillName
                                            </div>
                                            <div class="col-xs-4">
                                                @for (int i = 0; i < s.RatingNumber; i++)
                                                {
                                                    <span class="glyphicon glyphicon-star" style="color:lightgreen;"></span>
                                                }
                                                @for (int i = 0; i < (6 - s.RatingNumber); i++)
                                                {
                                                    <span class="glyphicon glyphicon-star-empty"></span>
                                                }
                                            </div>
                                            <div class="col-xs-3">
                                                @*<div class="row">
                                                        <div class="col-sm-2">

                                                            @using (Html.BeginForm("Delete", "Skills", new { id = s.Id }))
                                                            {
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn-no-button">
                                                                    <span class="glyphicon glyphicon-remove gi-2x"></span>
                                                                </button>
                                                            }
                                                        </div>
                                                        <div class="col-sm-2">
                                                            @Html.ActionLink(" ", "Edit", "Skills", new { id = s.Id }, new { @class = "glyphicon glyphicon-edit gi-2x actionlink-no-link" })
                                                        </div>
                                                    </div>*@

                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>




